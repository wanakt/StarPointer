<Window x:Class="StarPointer.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarPointer"
        mc:Ignorable="d"
        Title="Brightness Data" Height="800" Width="800" 
        WindowStartupLocation="CenterScreen" Background="#21242B">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label x:Name="lbMaxValue" Margin="20 10 0 0" Foreground="LightGray"/>
            <Label x:Name="lbMaxPositionX" Margin="20 10 0 0" Foreground="LightGray"/>
            <Label x:Name="lbMaxPositionY" Margin="20 10 0 0" Foreground="LightGray"/>
        </StackPanel>
        <TextBox Name="tbViewer" Grid.Row="1" Margin="10" Padding="10"
                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
    </Grid>
</Window>
